{
	"name": "vscode-laravel-goto",
	"displayName": "Laravel Goto",
	"description": "Go to various Laravel files by Alt + ;",
	"version": "0.3.1",
	"publisher": "absszero",
	"license": "MIT",
	"repository": "https://github.com/absszero/vscode-laravel-goto",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"PHP",
		"Laravel",
		"Blade",
		"View",
		"Namespace",
		"Controller"
	],
	"activationEvents": [
		"onCommand:extension.vscode-laravel-goto"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.vscode-laravel-goto",
				"title": "Laravel Goto"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .php",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && editorLangId == php && resourceExtname == .php"
			}
		],
		"configuration": [
			{
				"title": "Laravel Goto",
				"properties": {
					"laravelGoto.staticFileExtensions": {
						"description": "Specifies static file extensions",
						"scope": "window",
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [
							"js",
							"ts",
							"jsx",
							"vue",
							"css",
							"scss",
							"sass",
							"less",
							"styl",
							"htm",
							"html",
							"xhtml",
							"xml",
							"log"
						]
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.27",
		"@types/vscode": "^1.47.0",
		"glob": "^7.1.4",
		"mocha": "^6.2.3",
		"tslint": "^5.12.1",
		"typescript": "^3.9.7",
		"vscode-test": "^1.4.0"
	}
}
