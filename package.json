{
	"name": "vscode-laravel-goto",
	"displayName": "Laravel Goto",
	"description": "Go to various Laravel files",
	"version": "4.30.0",
	"publisher": "absszero",
	"license": "MIT",
	"icon": "icon.png",
	"repository": "https://github.com/absszero/vscode-laravel-goto",
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"PHP",
		"Laravel",
		"Blade",
		"View",
		"Namespace",
		"Controller"
	],
	"sponsor": {
		"url": "https://ko-fi.com/absszero"
	},
	"activationEvents": [
		"onLanguage:php",
		"onLanguage:blade"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.vscode-laravel-goto",
				"title": "Laravel Goto"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .php",
					"group": "navigation"
				},
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .js",
					"group": "navigation"
				},
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .ts",
					"group": "navigation"
				},
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .jsx",
					"group": "navigation"
				},
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .vue",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .php"
			},
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .js"
			},
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .ts"
			},
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .jsx"
			},
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .vue"
			}
		],
		"configuration": [
			{
				"title": "Laravel Goto",
				"properties": {
					"laravelGoto.exclusion": {
						"description": "the glob pattern to exclude finding files.",
						"scope": "window",
						"type": "string",
						"default": "**/{node_modules,vendor}/"
					},
					"laravelGoto.staticFileExtensions": {
						"description": "Specifies static file extensions",
						"scope": "window",
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [
							"js",
							"ts",
							"jsx",
							"vue",
							"css",
							"scss",
							"sass",
							"less",
							"styl",
							"htm",
							"html",
							"xhtml",
							"xml",
							"log"
						]
					},
					"laravelGoto.debug": {
						"description": "debug",
						"scope": "window",
						"type": "boolean",
						"default": false
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"lint": "eslint -c .eslintrc.js --ext .ts ./src"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/sinon": "^10.0.17",
		"@types/vscode": "^1.76.0",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"@vscode/test-electron": "^2.3.8",
		"esbuild": "^0.19.2",
		"eslint": "^7.32.0",
		"glob": "^10.3.10",
		"mocha": "^10.2.0",
		"sinon": "^16.0.0",
		"typescript": "^5.3.3"
	}
}
