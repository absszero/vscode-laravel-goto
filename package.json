{
	"name": "vscode-laravel-goto",
	"displayName": "Laravel Goto",
	"description": "Go to various Laravel files",
	"version": "4.7.0",
	"publisher": "absszero",
	"license": "MIT",
	"icon": "icon.png",
	"repository": "https://github.com/absszero/vscode-laravel-goto",
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"PHP",
		"Laravel",
		"Blade",
		"View",
		"Namespace",
		"Controller"
	],
	"activationEvents": [
		"onLanguage:php",
		"onCommand:extension.vscode-laravel-goto"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.vscode-laravel-goto",
				"title": "Laravel Goto"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .php",
					"group": "navigation"
				},
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .js",
					"group": "navigation"
				},
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .ts",
					"group": "navigation"
				},
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .jsx",
					"group": "navigation"
				},
				{
					"command": "extension.vscode-laravel-goto",
					"when": "editorTextFocus && resourceExtname == .vue",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .php"
			},
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .js"
			},
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .ts"
			},
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .jsx"
			},
			{
				"command": "extension.vscode-laravel-goto",
				"key": "alt+;",
				"when": "editorTextFocus && resourceExtname == .vue"
			}
		],
		"configuration": [
			{
				"title": "Laravel Goto",
				"properties": {
					"laravelGoto.exclusion": {
						"description": "the glob pattern to exclude finding files.",
						"scope": "window",
						"type": "string",
						"default": "**/{node_modules,vendor}/"
					},
					"laravelGoto.staticFileExtensions": {
						"description": "Specifies static file extensions",
						"scope": "window",
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [
							"js",
							"ts",
							"jsx",
							"vue",
							"css",
							"scss",
							"sass",
							"less",
							"styl",
							"htm",
							"html",
							"xhtml",
							"xml",
							"log"
						]
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"lint": "eslint -c .eslintrc.js --ext .ts ./src"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.1.0",
		"@types/node": "^10.17.60",
		"@types/vscode": "^1.76.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"eslint": "^7.32.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.6.1"
	}
}
